[Unit]
Description=Agastya Frontend Streamlit Service
After=network.target

[Service]
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/agastya-connect
Environment="PATH=/home/ubuntu/agastya-connect/venv/bin"
ExecStart=/home/ubuntu/agastya-connect/venv/bin/streamlit run app.py --server.address 0.0.0.0 --server.port 8501 --server.baseUrlPath app

Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target